<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
  http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">

    <context:component-scan base-package="io.prajesh"/>

    <bean id="greetingController" class="io.prajesh.controller.GreetingController"/>
    <bean id="helloWorldFactory" class="io.prajesh.factory.HelloWorldFactory"/>

    <bean id="helloWorldImpl" class="io.prajesh.domain.impl.HelloWorldImpl" primary="true"/>

    <beans profile="english">
        <bean id="helloWorldMy" factory-bean="helloWorldFactory" factory-method="getHelloWorldFactory">
            <constructor-arg value="en"/>
        </bean>
    </beans>

    <beans profile="malay">
        <bean id="helloWorldMy" factory-bean="helloWorldFactory" factory-method="getHelloWorldFactory">
            <constructor-arg value="my"/>
        </bean>
    </beans>

</beans>
